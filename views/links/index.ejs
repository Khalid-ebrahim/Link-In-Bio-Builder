<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Links</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body id="links-index-page">
  <div class="container">
    <h1 class="main-title">Your Links</h1>
    <a class="btn link-btn" href="/links/new">Add New Link</a>

    <ul class="links-list">
      <% links.forEach(link => { %>
        <li class="link-item">
          <a class="link-btn" href="<%= link.url %>" target="_blank"><%= link.title %></a>
          <a class="btn link-btn" href="/links/<%= link._id %>/edit">Edit</a>
          <form action="/links/<%= link._id %>?_method=DELETE" method="POST" style="display:inline">
            <button class="btn delete-btn" type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>

