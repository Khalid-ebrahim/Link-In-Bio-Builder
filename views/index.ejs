<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body id="home-page">
  <div class="container">
    <h1 class="main-title">Welcome to the app!</h1>

    <% if (user) { %>
      <p class="greeting"><span class="username"><%= user.username %></span></p>
      <div class="links">
        <a class="btn" href="/auth/sign-out" id="sign-out">Sign out</a>
        <a class="btn" href="/links" id="manage-links">Manage Links</a>
        <a class="btn" href="/u/<%= user.slug %>" id="public-page">View your public page</a>
      </div>
    <% } else { %>
      <div class="links">
        <a class="btn" href="/auth/sign-in" id="sign-in">Sign in</a>
        <a class="btn" href="/auth/sign-up" id="sign-up">Sign up</a>
      </div>
    <% } %>

    <!-- ðŸ†• Public Links Section -->
    <hr style="margin: 30px 0; border: 0; border-top: 1px solid #ddd;">
    <h2 class="main-title" style="font-size: 1.8rem;">Public Links from All Users</h2>

    <% if (publicLinks && publicLinks.length > 0) { %>
      <ul class="public-links-list">
        <% publicLinks.forEach(item => { %>
          <li class="public-link-card">
            <span class="username"><%= item.user.username %></span>
            <a class="link-btn" href="<%= item.url %>" target="_blank"><%= item.title %></a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No public links yet.</p>
    <% } %>
  </div>
</body>
</html>

